<Window x:Class="SaveStateCreator.SaveNameQueryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveStateCreator"
        mc:Ignorable="d"
        Title="SaveNameQueryWindow" Height="140" Width="320" Background="#0b1517" WindowStyle="None">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Viewbox>
            <TextBox Name="TextBoxName" Background="#0b1517" Foreground="#adfef6" Margin="5"/>
        </Viewbox>
        <Button Name="ButtonSave" Grid.Column="1" Margin="5" Click="ButtonSave_Click" Background="#1f313d">
            <Viewbox>
                <Label Content="Save" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#adfef6"/>
            </Viewbox>
        </Button>
    </Grid>
</Window>
